<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.personalwork.dao.TypeMapper">
    <select id="getTypes" resultType="com.personalwork.modal.entity.TypeDo">
        select * from type where user_id=#{userId};
    </select>
    <select id="getType" resultType="com.personalwork.modal.entity.TypeDo">
        select * from type where id=#{id};
    </select>
    <insert id="addType" parameterType="com.personalwork.modal.entity.TypeDo">
        insert into type (name,parentid,user_id) values(#{name},#{parentId},#{userId});
    </insert>
    <delete id="deleteType" >
        delete from type where id = #{id};
    </delete>
    <update id="updateType" parameterType="com.personalwork.modal.entity.TypeDo">
        update type
        <set>
            name = #{name},
            parentid =#{parentId}
        </set>
        where id = #{id};
    </update>

</mapper>
